<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="1024"
        x:Class="BitChopp.Views.QRCodeWindow"
        Title="BitChopp - Casa21 - Pay!"
        Background="Black"
        WindowStartupLocation="CenterScreen">
  <Window.Styles>
    <!-- Specific style for Button -->
    <Style Selector="Button">
      <Setter Property="Foreground" Value="Gold"/>
      <Setter Property="Background" Value="Black"/>
      <Setter Property="FontFamily" Value="Calibri"/>
      <Setter Property="FontSize" Value="30"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="BorderBrush" Value="Gold"/>
      <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="Margin" Value="10"/>
    </Style>
  </Window.Styles>
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <Image x:Name="QrCodeImage" Width="500" Height="500" Stretch="Uniform"/>
    <Button Content="Cancelar" HorizontalAlignment="Center" Click="CloseDialog"/>
  </StackPanel>
</Window>
