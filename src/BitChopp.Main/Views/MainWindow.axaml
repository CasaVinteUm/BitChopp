<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BitChopp.Main.ViewModels"
        xmlns:lottie="using:Avalonia.Labs.Lottie"
        x:DataType="vm:MainViewModel"
        x:Class="BitChopp.Main.Views.MainWindow"
        Title="BitChopp - Casa21">
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <!-- Logo -->
    <Image Source="avares://BitChopp.Main/Assets/logo.png" Width="200" Height="200" Margin="0,0,0,200"/>

    <!-- Glass Size Buttons -->
    <ItemsControl ItemsSource="{Binding Switches}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Button Content="{Binding Description}"
                        HorizontalAlignment="Center"
                        Click="OnSwitchButtonClick"/>
                <!-- Customize the button content and bindings as needed -->
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

    <lottie:Lottie Name="loaderImage" Path="avares://BitChopp.Main/Assets/loader.json" Width="200" Height="200" Margin="0,100,0,0" HorizontalAlignment="Center" />
  </StackPanel>
</Window>
